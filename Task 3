//Задание 3. Время, время!
package main

import (
	"fmt"
)

func main() {
	shiftDuration := 480
	customerOrders := 2
	cashierCollects := 4

	result := shiftDuration / (customerOrders + cashierCollects)

	fmt.Println("Расчёт количества клиентов, обслуживаемых за смену.")
	fmt.Println("Введите длительность смены в минутах:", shiftDuration)
	fmt.Println("Сколько минут клиент делает заказ:", customerOrders)
	fmt.Println("Сколько минут кассир собирает заказ:", cashierCollects)
	fmt.Println("-----Считаем-----")
	fmt.Println("За смену длиной", shiftDuration, "минут кассир успеет обслужить", result, "клиентов.")
}
